gamma = 1 / sqrt(1 - v^2 / c^2)
beta = v^2 / c^2
t_prime = gamma t
l_prime = l / gamma
x_prime = gamma(x - v t)
t_prime = gamma(t - v x / c^2)
V_prime_par = (V_par - v) / (1 - (V_par v / c^2))
V_prime_perp = V_perp / (gamma(1 - (V_par v / c^2)))
z = v (sqrt(1 - beta))/(sqrt(1 + beta))
z = gamma v
E = m c^2
